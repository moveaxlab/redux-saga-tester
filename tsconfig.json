{
  "compilerOptions": {
    "lib": ["dom", "es2015"],
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "noImplicitAny": true,
    "skipLibCheck": false,
    "strictNullChecks": true,
    "esModuleInterop": false,
    "strict": true
  },
  "exclude": ["lib", "dist"]
}
