{
  "name": "redux-saga-tester",
  "version": "1.0.1",
  "description": "Full redux environment testing helper for redux-saga",
  "main": "dist/SagaTester.js",
  "scripts": {
    "lint": "eslint --ext .ts,.tsx .",
    "examples": "mocha --compilers js:babel-register './examples/**/*.js'",
    "test": "jest",
    "test-0.15.3": "npm i --no-save redux-saga@^0.15.3 && jest",
    "test-1.0.2": "npm i --no-save redux-saga@1.0.2 && jest",
    "test-dev": "npm run test-dev-0.15.3 && npm run test-dev-1.0.2",
    "test-dev-0.15.3": "npm i --no-save redux-saga@^0.15.3 && jest",
    "test-dev-1.0.2": "npm i --no-save redux-saga@1.0.2 && jest",
    "compile": "babel -d dist/ src/",
    "build": "tsc -p tsconfig.build.json",
    "fix:lint": "eslint --ext .ts,.tsx --fix .",
    "test:types": "tsc -p tsconfig.json --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/moveaxlab/redux-saga-tester.git"
  },
  "keywords": [
    "redux-saga",
    "test"
  ],
  "author": "Guy Benron",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/moveaxlab/redux-saga-tester/issues"
  },
  "homepage": "https://github.com/moveaxlab/redux-saga-tester#readme",
  "devDependencies": {
    "@moveax/eslint-config": "^0.3.1",
    "@types/jest": "^26.0.15",
    "@types/redux-saga": "^0.10.5",
    "eslint": "6.0.0",
    "husky": "^4.3.0",
    "jest": "^26.0.1",
    "jest-extended": "^0.11.5",
    "lint-staged": "^10.5.1",
    "redux": "^4.0.5",
    "redux-saga": "^1.1.3",
    "ts-jest": "^26.4.4",
    "typescript": "^3.7.5"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
